<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/basicScreen"
        android:name="uz.targetsoftwaredevelopment.myapplication.presentation.ui.screens.BasicScreen"
        android:label="screen_basic_nav"
        tools:layout="@layout/screen_basic_nav" >
        <action
            android:id="@+id/action_basicScreen_to_watchVideoFragment"
            app:destination="@id/watchVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/watchVideoFragment"
        android:name="uz.targetsoftwaredevelopment.myapplication.presentation.ui.WatchVideoFragment"
        android:label="fragment_watch_video"
        tools:layout="@layout/screen_watch_video" />
    <fragment
        android:id="@+id/splashScreen"
        android:name="uz.targetsoftwaredevelopment.myapplication.ui.login.SplashScreen"
        android:label="screen_splash"
        tools:layout="@layout/screen_splash" >
        <action
            android:id="@+id/action_splashScreen_to_basicScreen"
            app:destination="@id/basicScreen" />
        <action
            android:id="@+id/action_splashScreen_to_authScreen"
            app:destination="@id/authScreen" />
    </fragment>
    <fragment
        android:id="@+id/authScreen"
        android:name="uz.targetsoftwaredevelopment.myapplication.presentation.ui.screens.AuthScreen"
        android:label="screen_auth"
        tools:layout="@layout/screen_auth" >
        <action
            android:id="@+id/action_authScreen_to_basicScreen"
            app:destination="@id/basicScreen" />
    </fragment>
</navigation>