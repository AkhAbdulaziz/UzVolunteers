<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="start"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp"
    android:layout_margin="10dp"
    tools:context=".ui.fragments.ItemViewPagerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/view_pager_shape">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="440dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/account_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/my_foto"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    app:layout_constraintVertical_chainStyle="packed"
                    android:id="@+id/account_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Steve Johnson"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toTopOf="@id/data_tv"
                    app:layout_constraintTop_toTopOf="@id/account_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/account_img"
                    />
                <TextView
                    android:id="@+id/data_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="30 min ago"
                    android:textSize="14sp"
                    android:textColor="#80000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@id/account_name_tv"
                    app:layout_constraintBottom_toBottomOf="@id/account_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/account_img"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/video_cv"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardCornerRadius="15dp"
                    app:cardUseCompatPadding="false"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/account_img">

                    <ImageView
                        android:id="@+id/video_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tabiat"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/play_img"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_play_circle"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/like_video_img"
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_heart"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/video_cv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <ImageView
                    android:id="@+id/comment_video_img"
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_comment"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/video_cv"
                    app:layout_constraintLeft_toRightOf="@id/like_video_img"
                    />
                <ImageView
                    android:id="@+id/send_video_img"
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_send"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/video_cv"
                    app:layout_constraintLeft_toRightOf="@id/comment_video_img"
                    />
                <ImageView
                    android:id="@+id/save_video_img"
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_save"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/video_cv"
                    app:layout_constraintRight_toRightOf="parent"
                    />

                <TextView
                    android:id="@+id/tittle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tittle asd asd asd asd asd asd asd ad das ads asd ad asdsa sdfsd fsdf  asdf asdf safsd sdf sd"
                    android:textSize="16sp"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/like_video_img"
                    />
                <TextView
                    android:id="@+id/address_video_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:Tashkent shahar Uchtepa tumani"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:paddingHorizontal="5dp"
                    android:textColor="#FF0000"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/tittle_tv"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>





</LinearLayout>